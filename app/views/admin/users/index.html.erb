<% content_for(:title) { "Users - Admin - Hackatime" } %>

<div class="flex justify-between items-center mb-6">
  <h1 class="text-2xl font-bold text-white">Users</h1>
</div>

<div class="bg-gray-800 rounded-lg overflow-hidden">
  <table class="min-w-full divide-y divide-gray-700">
    <thead class="bg-gray-700">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">User</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Trust Level</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Admin Level</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Created</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Actions</th>
      </tr>
    </thead>
    <tbody class="bg-gray-800 divide-y divide-gray-700">
      <% @users.each do |user| %>
        <tr>
          <td class="px-6 py-4 whitespace-nowrap">
            <div class="flex items-center">
              <% if user.avatar_url.present? %>
                <%= image_tag user.avatar_url, class: "w-8 h-8 rounded-full mr-3" %>
              <% else %>
                <span class="w-8 h-8 rounded-full bg-gray-600 flex items-center justify-center mr-3 text-gray-300">
                  <%= user.display_username.first.upcase %>
                </span>
              <% end %>
              <div>
                <div class="text-white font-medium"><%= user.display_username %></div>
                <div class="text-gray-400 text-sm"><%= user.email %></div>
              </div>
            </div>
          </td>
          <td class="px-6 py-4 whitespace-nowrap">
            <span class="px-2 py-1 rounded text-xs font-medium
              <%= case user.trust_level
                  when 'green' then 'bg-green-600 text-white'
                  when 'yellow' then 'bg-yellow-600 text-white'
                  when 'red' then 'bg-red-600 text-white'
                  else 'bg-blue-600 text-white'
                  end %>">
              <%= user.trust_level %>
            </span>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-gray-300">
            <%= user.admin_level %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-gray-400 text-sm">
            <%= user.created_at.strftime("%Y-%m-%d") %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm">
            <%= link_to "View", admin_user_path(user), class: "text-blue-400 hover:text-blue-300 mr-4" %>
            <%= link_to "Edit", edit_admin_user_path(user), class: "text-yellow-400 hover:text-yellow-300" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>